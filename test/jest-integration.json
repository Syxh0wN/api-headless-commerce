{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": "test/integration/.*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "apps/api/src/**/*.(t|j)s"
  ],
  "coverageDirectory": "./coverage",
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["<rootDir>/test/setup-integration.ts"]
}
